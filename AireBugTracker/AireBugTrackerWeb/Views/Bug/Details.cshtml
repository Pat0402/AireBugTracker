@model DatabaseContext.Models.Bug

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.Title)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsOpen) {
                @:Open
            }
            else {
                @:Closed
            }
        </dd>
        <dt class = "col-sm-12">
            @Html.DisplayNameFor(model => model.Details)
        </dt>
        <dd class = "col-sm-12">
            @Html.Raw(Model.Details.Replace("\r\n", "<br />\r\n"))
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OpenedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OpenedDate)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class="btn btn-primary" } )
</div>

@model DatabaseContext.Models.Bug

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.Title)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            User
        </dt>
        <dd class="col-sm-10">
            @if(Model.User != null){
                @Html.DisplayFor(model => model.User.Name);
            }
            else{
                @Html.Raw("Unassigned");
            }
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsOpen) {
                @:Open
            }
            else {
                @:Closed
            }
        </dd>
        <dt class = "col-sm-12">
            @Html.DisplayNameFor(model => model.Details)
        </dt>
        <dd class = "col-sm-12">
            @Html.Raw(Model.Details?.Replace("\r\n", "<br />\r\n"))
        </dd>
        <dt class = "col-sm-2">
            Opened
        </dt>
        <dd class = "col-sm-10 date">
            @Html.DisplayFor(model => model.OpenedDate)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class="btn btn-primary" } )
    <div>
        <a asp-action="Index">Back to open bugs</a>
    </div>
</div>
